---
import { craftClient } from '../lib/craft';
import { GLOBALS_QUERY } from '../queries/globals';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/tailwind.css';

const { title } = Astro.props;
const data = await craftClient.query(GLOBALS_QUERY);
const globals = data?.globalEntries?.[0];
const pages = data?.pagesEntries || [];
const siteName = globals?.title || import.meta.env.SITE_NAME || 'Site';
const pageTitle = title ? `${title} | ${siteName}` : siteName;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="flex min-h-screen flex-col">
			<Header 
				{currentPath} 
				{pages} 
				{siteName}
				logo={globals?.logo}
			/>
			<main class="grow">
				<slot />
			</main>
			<Footer address={globals?.address} />
		</div>
	</body>
</html>

<style is:global>
	/* Your global styles here */
</style>
